{
  "compileOnSave": false,
  "compilerOptions": {
    "strictPropertyInitialization": false,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@auth": ["libs/auth/authentication.service.ts"],
      "@config": ["config/userpool.ts"],
      "@unsoul-mfe/auth": ["libs/auth/src/index.ts"],
      "@unsoul-mfe/unsoul-data-access-auth": [
        "libs/unsoul-data-access-auth/src/index.ts"
      ],
      "dashboard/Routes": [
        "apps/dashboard/src/app/remote-entry/entry.routes.ts"
      ],
      "login/Routes": ["apps/login/src/app/remote-entry/entry.routes.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
